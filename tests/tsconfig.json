{
  "compilerOptions": {
    "target": "ES2017",
    "types": ["vitest/globals"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["../src/*"],
      "@tests/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../src/**/*.ts",
    "../src/**/*.tsx",
  ],
  "files": [
    "types/expect.d.ts",  // Specify the path to your custom types
  ],
  "exclude": ["node_modules"]
}
